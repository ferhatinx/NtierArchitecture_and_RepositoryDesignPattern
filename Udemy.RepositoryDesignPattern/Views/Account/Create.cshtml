@model UserListModel
@{
    Layout="~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-6">
        <h3>Hesap Eklenecek Kişi Bilgileri</h3>
        <p>
            Hesap Ekleyeceğiniz Kullanıcı Adı : <strong>@Model.Name</strong>
        </p>
        <p>
            Hesap Ekleyeceğiniz Kullanıcı Adı : <strong>@Model.Surname</strong>
        </p>
         <p>
            Hesap Ekleyeceğiniz Kullanıcının Hesap Sayısı : <strong><getaccountcount app-user-id="@Model.Id"></getaccountcount></strong>
        </p>
    </div>
    <div class="col-md-6">
        <h4>Ekleme İşlemi</h4>
    </div>
</div>
<form class="form " asp-action="Create" asp-controller="Account" method="post">
    <input type="hidden" name="AppUserId" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label">Hesap Numarası</label>
        <input type="number" class="form-control" name="AccountNumber" />
    </div>
    <div class="mb-3">
        <label class="form-label">Bakiye</label>
        <input  type="number" class="form-control" name="Balance"/>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary">Ekle</button>
    </div>
</form>